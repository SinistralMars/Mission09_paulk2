@page
@model BookStore.Pages.CartModel
@{
    ViewData["Title"] = "Cart";
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped table-hover">
    
    <thead class="thead-dark">
        <tr>
            <th>Quantity</th>
            <th>Item</th>            
            <th>Cost</th>
            <th>Subtotal</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.Basket.Items)
        {
            <tr>
                <td class="text-center">@i.Quantity</td>
                <td class="text-left">@i.Book.Title</td>
                <td class="text-right">@i.Book.Price.ToString("c")</td>
                <td class="text-right">@((i.Quantity * i.Book.Price).ToString("c"))</td>

                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="bookID" value="@i.Book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3" class="text-right text-muted">Total:</td>
            <td class="text-right">@Model.Basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    <a class="btn btn-primary btn-lg" href="@Model.ReturnUrl">Continue Shopping</a>
</div>