@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h3>
        <div class="card-text p-1">
            <ul>
                <li>Author: @Model.Author</li>
                <li>Publisher: @Model.Publisher</li>
                <li>ISBN: @Model.Isbn</li>
                <li>Classification/Category: <span class="badge badge-secondary">@Model.Classification/@Model.Category</span></li>
                <li>Number of Pages: @Model.PageCount</li>
            </ul>
        </div>
    </div>

    <form method="post" asp-page="/Cart">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text p-1">
            <button type="submit" class="btn btn-success pull-right" style="float:right">Add To Cart</button>
        </span>

    </form>
</div>

